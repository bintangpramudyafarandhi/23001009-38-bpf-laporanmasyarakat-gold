<style>
    .title {
        font-size: 50px;
        font-weight: 700;
    }

    .div-form {
        background-color: #2E3691;
        padding-bottom: 10px;
        padding-top: 10px;
        border-radius: 20px;
    }

    label {
        color: white;
        font-weight: 600;
    }

    .btn {
        border-radius: 10px;
    }

    .form-control {
        border-radius: 10px;
    }
</style>
<body>
    <h1 class="text-center title">Edit Profil</h1>

    <% if (typeof errors !== 'undefined') { %>
        <div class="container" style="width: 30%;">
            <% errors.forEach(el => { %>
                <p class="alert alert-danger" style="color: red;"><i class="fa-solid fa-circle-exclamation"></i> <%= el.message %></p>
            <% }) %>
        </div>
    <% } %>
    
    <div class="container w-25 div-form">
        <form action="/admin/profil/edit" method="post">
            <% data.forEach(el => { %>
                <label for="username">Username</label>
                <input class="form-control mb-1" type="text" id="username" name="username" value="<%= el.username %>" required>
                <label for="nama">Nama Lengkap</label>
                <input class="form-control mb-1" type="text" id="nama" name="nama" value="<%= el.nama %>" required>
                <label for="no_telp">No. Telp</label>
                <input class="form-control mb-1" type="number" id="no_telp" name="no_telp" value="<%= 0+el.no_telp %>" required>
                <label for="alamat">Alamat</label>
                <input class="form-control mb-1" type="text" id="alamat" name="alamat" value="<%= el.alamat %>" required>
                <div class="d-flex justify-content-between">
                    <a class="btn btn-danger" style="width: 23%;" href="/admin/profil"><i class="fa-solid fa-right-from-bracket"></i></a>
                    <button class="btn btn-success w-75" type="submit"><i class="fa-solid fa-check"></i></button>
                </div>
            <% }) %>
        </form>
    </div>
</body>