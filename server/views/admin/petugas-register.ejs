<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <center>
        <h1>Tambah Petugas</h1>

        <% if (typeof errors !== 'undefined') { %>
            <% errors.forEach(el => { %>
                <h2 style="color: red;">! <%= el.message %></h2>
            <% }) %>
        <% } %>

        <form action="/admin/petugas/tambah" method="post">
            <input type="text" id="username" name="username" placeholder="Username" required> <br>
            <input type="text" id="nama" name="nama" placeholder="Nama Lengkap" required> <br>
            <input type="number" id="no_telp" name="no_telp" placeholder="08XXXXXXXXXX" required> <br>
            <input type="text" id="alamat" name="alamat" placeholder="Alamat" required> <br> <br>
            <button type="submit">Kirim</button>
        </form> <br> <br>

        <a href="/admin/petugas">kembali</a>
    </center>
</body>
</html>