    <div class="container w-75 mt-2">
        <div class="card">
            <div class="card-header text-center">
                Info Laporan
            </div>
            <div class="card-body d-flex">
                <% if (typeof data.foto !== 'null') { %>
                    <div>
                        <img src="<%= data.foto %>" alt="" srcset="">
                    </div>
                <% } %>
                <div class="isi">
                    <p><span>Nama Pengirim:</span> <%= data.nama %></p>
                    <p><span>NIK:</span> <%= data.nik %></p>
                    <p><span>Status Laporan:</span> 
                        <% if (data.status === false) { %>
                            Belum Dibalas
                        <% } else { %>
                            Sudah Dibalas
                        <% } %>
                    </p>
                    <p><span>Isi Laporan:</span> <%= data.isi_laporan %></p>
                </div>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>

    <div class="container w-75 mt-2">
        <div class="card">
            <div class="card-header text-center">Info Balasan</div>
            <div class="card-body">
                <p><span>Isi Balasan :</span> <%= data.isi_balasan %></p>
                <p class="mt-5"><span>Dibalas Oleh:</span> <%= dataAdmin.nama %></p>
                <p><span>No. Telp:</span> <%= 0+dataAdmin.no_telp %></p>
                <p><span>Alamat:</span> <%= dataAdmin.alamat %></p>
                <p><span>Dibalas Pada:</span> <%= data.tgl_balasan.toLocaleDateString('id-ID', { weekday: 'long', day: '2-digit', month: 'long', year: 'numeric', hour: '2-digit', minute: '2-digit', timeZoneName: 'short' }) %></p>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
